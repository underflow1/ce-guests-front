# Production environment variables
# Скопируйте этот файл в .env.production и заполните реальными значениями

# Домен сайта
VITE_SITE_DOMAIN=example.com

# Путь для деплоя фронтенда
BUILD_OUT_DIR=/var/www/example.com

# Бэкенд хост и порт
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8002

# API базовый URL (если отличается от дефолтного)
VITE_API_BASE_URL=https://example.com/api/v1

# Пользователь и группа для chown после сборки
DEPLOY_USER=
DEPLOY_GROUP=www-data
